    <position name="left-back-shoulder-joint" joint="left-back-shoulder-joint"     ctrllimited="true"  ctrlrange="-1 1" gear="1" forcelimited="true"   forcerange="-15.75 15.75"/>
    <position name="left-back-knee-joint" joint="left-back-knee-joint"             ctrllimited="true"  ctrlrange="-1 1" gear="1" forcelimited="true"   forcerange="-15.75 15.75"/>
